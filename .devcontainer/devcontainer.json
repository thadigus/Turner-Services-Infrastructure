{
  "name": "Turner Services IaC Devcontainer",
  "build": {
    "dockerfile": "../images/iac-runner/Dockerfile",
    "context": ".."
  },
  "runArgs": [
    "--network=host"
  ],
  "containerEnv": {
    "PULUMI_STACK": "ts-proxmox-test",
    "TS_SERVER_LIST_PATH": "../../turner-services-sensitive-repo/server-list-test.yml"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  },
  "remoteUser": "turneradmin",
  "updateRemoteUserUID": true
}
